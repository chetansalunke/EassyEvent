# Environment Configuration
NODE_ENV=development
PORT=5001

# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/eassyevent
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/eassy-event

# JWT Configuration
JWT_SECRET=eassyevent-super-secret-jwt-key-for-development-only-2024
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=eassyevent-refresh-token-secret-for-development-only-2024
JWT_REFRESH_EXPIRE=30d

# Email Configuration (for email verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@eassyevent.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=12

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
